@model InboxMessageDetailViewModel
@{
    ViewData["Title"] = "InMessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="card-body">
    @await Html.PartialAsync("SidebarAdminContactPartial")

    <div class="email-right-box">
        <div role="toolbar" class="toolbar">
            <div class="btn-group">
                <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                    Gelen Mesajlar <span class="caret m-l-5"></span>
                </button>

            </div>
        </div>
        <div class="read-content">
            <div class="media pt-5">
                <img class="mr-3 rounded-circle" src="~/adminTheme/images/avatar/1.jpg">
                <div class="media-body">
                    <h5 class="m-b-3">@Model.ContactName</h5>
                    <p class="m-b-2">@(((DateTime)Model.ContactDate).ToString("dd-MMM-yyyy"))</p>
                </div>

            </div>
            <hr>
            <div class="media mb-4 mt-1">
                <div class="media-body">
                    <span class="float-right"></span>
                    <h4 class="m-0 text-primary">@Model.ContactSubject</h4><small class="text-muted">Mail : @Model.ContactMail</small>
                </div>
            </div>
            <h5 class="m-b-15">Hi,Ingredia,</h5>
            <p>
                @Model.ContactMesaj
            </p>
            <h5 class="m-b-5 p-t-15">admin@gmail.com</h5>
            <p>Admin</p>



        </div>


    </div>

