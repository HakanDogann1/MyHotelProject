@model List<RoomListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Oda Resmi</th>
        <th>Oda Fiyatı</th>
        <th>Oda Başlığı</th>
        <th>Oda İçeriği</th>
        <th>Yatak Sayısı</th>
        <th>Banyo Sayısı</th>
        <th>Wifi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <th>@item.RoomNumber</th>
            <td>@item.RoomCoverImage</td>
            <td>@item.Price ₺</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.Wifi</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<br />
<a href="/AdminRoom/AddRoom/" class="btn btn-outline-success"> Yeni Oda ekle</a>


