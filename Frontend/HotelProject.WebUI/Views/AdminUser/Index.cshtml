@model List<AppRole> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td><a href="/AdminUser/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminUser/UpdateRole/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/AdminUser/AddRole/" class="btn btn-outline-success"> Yeni Rol ekle</a>


